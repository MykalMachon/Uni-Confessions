<html>
  <head>
    <title>{{ title }}</title>

    <meta content="width=device-width, initial-scale=1, shrink-to-fit=no" name="viewport"/>
    <!-- Compiled and minified CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>
  </head>

  <body>
    <nav class="deep-purple darken-2">
      <div class="nav-wrapper container">
        <div class="col s12">
          <a class="breadcrumb" href="/">University Confessions</a>
          <a class="breadcrumb" href="/schools/">Schools</a>
          <a class="breadcrumb" href="/schools/{{schoolData.id}}">{{schoolData.name}}</a>
        </div>
      </div>
    </nav>
    <div class="container">
      {% for message in flash %}
        <script>
          M.toast({html: '{{message.message}}'});
        </script>
      {% endfor %}

      <div class="row">
        <div class="col s12">
          <h3>{{title}}</h3>
        </div>
      </div>

      <div class="row">
        <div class="col s6 m6">
          <p>{{schoolData.address}}</p>
        </div>
        <div class="col s6 m6">
          <a href="{{schoolData.id}}/new" class="waves-effect waves-light deep-purple darken-2 btn right">
            CREATE NEW POST
            <i class="material-icons right">add_circle</i>
          </a>
        </div>
      </div>

      <div class="divider"></div>

        {% if postData.length > 0 %}
          {% for post in postData %}
            <div class="row">             
              <div class="col s8 m10"> 
                <h5>{{post.title}}</h5>
                <p class="grey-text">{{post.createdate | date: "%a, %b %d, %Y"}}</p>
              </div>
              <div class="col s4 m2" style="display: flex; justify-content: center; align-items: center; height: 89px;"> 
                <a href="/schools/{{schoolData.id}}/{{post.id}}">Read Post</a>
              </div>
            </div>
            <div class="divider"></div>
          {% endfor %}
        {% else %}
        <div class="row"> 
          <div class="col s12 m12">
            <p class="grey-text">hmm, seems like there aren't any posts here yet... You should make a new one!</p>
          </div>
        </div>
        {% endif %}
      <div class="row">  
        <p>
          <a href="/schools/">‚Üê Return to schools view</a>
        </p>
      </div>
    </div>
  </body>
</html>
